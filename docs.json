{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Blockworks Research API",
  "colors": {
    "primary": "#545cf8",
    "light": "#9297f6",
    "dark": "#4349c7"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "getting-started",
              "api-keys"
            ]
          },
          {
            "group": "API Reference",
            "pages": [
              {
                "group": "Assets",
                "pages": [
                  "api-reference/assets/list",
                  "api-reference/assets/get-single"
                ]
              },
              {
                "group": "Metrics",
                "pages": [
                  "api-reference/metrics/list",
                  "api-reference/metrics/get-single"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Playground",
        "openapi": "/openapi.json"
      }
    ]
  },
  "global": {
    "anchors": [
      {
        "anchor": "Blockworks Research",
        "href": "https://www.blockworksresearch.com",
        "icon": "chart-line"
      },
      {
        "anchor": "Twitter",
        "href": "https://x.com/Blockworks_",
        "icon": "twitter"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://www.blockworksresearch.com/#pricing"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/blockworksres",
      "linkedin": "https://linkedin.com/showcase/blockworks-research/"
    }
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "examples": {
      "languages": ["curl", "python", "javascript"],
      "defaults": "required"
    }
  },
  "openapi": "https://rest.staging.blockworksresearch.com/api-json"
}